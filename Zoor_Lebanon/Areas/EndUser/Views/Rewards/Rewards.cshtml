        <link href="~/enduser/css/style.css" rel="stylesheet">
    </head>
    <body>
        <div class="container-fluid bg-breadcrumb">
            <div class="container text-center py-5" style="max-width: 900px;">
                <h3 class="text-white display-3 mb-4">
                    @ViewBag.Title</h1>
                   
            </div>
        </div>
        <!-- Header End -->
        <div class="container mt-5">
            <h2 class="text-center mb-4">Rewards</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }


            <div class="row">
                @foreach (var reward in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@reward.Description</h5>
                                <p>Discount: @reward.DiscountValue%</p>
                                <p>Points Required: @reward.PointsCost</p>
                                <p>Discount Code: @reward.CouponCode</p>
                            <form method="post" action="@Url.Action("Redeem", "Rewards", new { area = "EndUser" })">
                                    <input type="hidden" name="couponId" value="@reward.CouponId" />
                                    <button type="submit" class="btn btn-primary">Redeem</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


