@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<html>
<head>
    <title>Zoor Lebanon - @ViewBag.Title</title>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600&family=Roboto&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/enduser/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/enduser/lib/lightbox/css/lightbox.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/enduser/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/enduser/css/style.css" rel="stylesheet">
    <link href="~/enduser/css/chatbot.css" rel="stylesheet">
</head>
<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    <div class="container-fluid bg-primary px-5 d-none d-lg-block">
        <div class="row gx-0">
            <div class="col-lg-8 text-center text-lg-start mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center" style="height: 45px;">
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-twitter fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-facebook-f fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-linkedin-in fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-instagram fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle" href=""><i class="fab fa-youtube fw-normal"></i></a>
                </div>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                <div class="d-inline-flex align-items-center" style="height: 45px;">
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                    {
                        <!-- User is logged in -->
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle text-light" data-bs-toggle="dropdown">
                                <small><i class="fa fa-home me-2"></i> My Dashboard</small>
                            </a>
                            <div class="dropdown-menu rounded">
                                <a href="@Url.Action("MyBookings", "Booking", new { area = "EndUser" })" class="dropdown-item">
                                    <i class="fas fa-clipboard-list me-2"></i> My Bookings
                                </a>
                                <a href="@Url.Action("MyProfile", "Account", new { area = "EndUser" })" class="dropdown-item">
                                    <i class="fas fa-user-alt me-2"></i> My Profile
                                </a>
                                <a href="@Url.Action("Logout", "Account", new { area = "EndUser" })" class="dropdown-item">
                                    <i class="fas fa-power-off me-2"></i> Log Out
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- User is not logged in -->
                        <a href="@Url.Action("Register", "Account", new { area = "EndUser" })">
                            <small class="me-3 text-light"><i class="fa fa-user me-2"></i>Register</small>
                        </a>
                        <a href="@Url.Action("Login", "Account", new { area = "EndUser" })">
                            <small class="me-3 text-light"><i class="fa fa-sign-in-alt me-2"></i>Login</small>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- NavBar & Hero Start -->
    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
            <a href="" class="navbar-brand p-0">
                <h1 class="m-0"><i class="fa fa-map-marker-alt me-3"></i>Zoor Lebanon</h1>
                <!-- <img src="img/logo.png" alt="Logo"> -->
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-label="Toggle navigation" title="Toggle navigation">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a class="nav-item nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                       href="@Url.Action("Index", "Home", new { area = "EndUser" })">Home</a>
                    <a class="nav-item nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")"
                       href="@Url.Action("About", "Home", new { area = "EndUser" })">About</a>
                   
                    <a class="nav-item nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Packages" ? "active" : "")"
                       href="@Url.Action("Packages", "Home", new { area = "EndUser" })">Packages</a>
                    <a class="nav-item nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Rewards" ? "active" : "")"
                       href="@Url.Action("Rewards", "Rewards", new { area = "EndUser" })">Rewards</a>
                    <a class="nav-item nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")"
                       href="@Url.Action("Contact", "Home", new { area = "EndUser" })">Contact</a>
                   
                </div>
            </div>
        </nav>
        @if (ViewData["ShowCarousel"] as bool? == true)
        {
            <!-- Carousel Start -->
            <div class="carousel-header">
                <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
                        <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
                        <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img src="~/enduser/img/baalbek.jpg" class="img-fluid" alt="Image">
                            <div class="carousel-caption">
                                <div class="p-3" style="max-width: 900px;">
                                    <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore Lebanon</h4>
                                    <h1 class="display-2 text-capitalize text-white mb-4">Discover the Beauty of Lebanon!</h1>
                                    <p class="mb-5 fs-5">
                                        Uncover hidden gems and breathtaking destinations. Let us guide you to unforgettable experiences.
                                    </p>
                                   
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/enduser/img/Lebanon_The Majestic Chouwan.jpeg" class="img-fluid" alt="Image">
                            <div class="carousel-caption">
                                <div class="p-3" style="max-width: 900px;">
                                    <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore The World</h4>
                                    <h1 class="display-2 text-capitalize text-white mb-4">Embark on Thrilling Adventures</h1>
                                    <p class="mb-5 fs-5">
                                        From mountains to rivers, experience it all. Create memories with tailored adventure packages.

                                    </p>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/enduser/img/hospitality-news-Tourism-in-lebanon-fb.jpg" class="img-fluid" alt="Image">
                            <div class="carousel-caption">
                                <div class="p-3" style="max-width: 900px;">
                                    <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore The World</h4>
                                    <h1 class="display-2 text-capitalize text-white mb-4">Relax and Reconnect with Nature</h1>
                                    <p class="mb-5 fs-5">
                                        Unwind with our peaceful getaway packages. Immerse yourself in Lebanon’s rich heritage.
                                    </p>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon btn bg-primary" aria-hidden="false"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon btn bg-primary" aria-hidden="false"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <!-- Carousel End -->

            <div class="container-fluid search-bar position-relative" style="top: 0; transform: translateY(-50%);">
                <div class="container">
                    <form action="@Url.Action("Index", "Search", new { area = "EndUser" })" method="get" class="position-relative rounded-pill w-100 mx-auto p-5" style="background: rgba(19, 53, 123, 0.8);">
                        <input class="form-control border-0 rounded-pill w-100 py-3 ps-4 pe-5"
                               type="text"
                               name="query"
                               placeholder="Eg: Photography, Rafting, Food"
                               required>
                        <button type="submit"
                                class="btn btn-primary rounded-pill py-2 px-4 position-absolute me-2"
                                style="top: 50%; right: 46px; transform: translateY(-50%);">
                            Search
                        </button>
                    </form>
                </div>
            </div>

        }
        
    </div>
    <!-- NavBar & Hero End -->
    <main>
        @RenderBody()

        <!-- Chatbot Button -->
        <button id="chatbot-button">
            <i class="fas fa-comments"></i>
        </button>

        <!-- Chatbot Modal -->
        <div id="chatbot-modal">
            <div class="chatbot-header">
                <span class="close-chatbot" title="Close">&times;</span>
            </div>
            <div id="chatbot-messages">
                <p><strong>Zoor Bot:</strong> Hi! How can I help you?</p>
            </div>

            <!-- Predefined Questions Section -->
            <div id="predefined-questions" class="chatbot-questions">
                <p>Click on a question below to get started:</p>
                <button data-question="adventure" class="btn btn-secondary">Adventure</button>
                <button data-question="contact" class="btn btn-secondary">Contact</button>
                <button data-question="booking" class="btn btn-secondary">Booking</button>
                <button data-question="prices" class="btn btn-secondary">Prices</button>
                <button data-question="loyalty points" class="btn btn-secondary">Loyalty Points</button>
            </div>
        </div>



    </main>
    <!-- Footer Start -->
    <div class="container-fluid footer py-5">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
