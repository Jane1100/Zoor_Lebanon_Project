                        <div class="d-flex align-items-center">
                            <i class="fas fa-share fa-2x text-white me-2"></i>
                            <a class="btn-square btn btn-primary rounded-circle mx-1" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn-square btn btn-primary rounded-circle mx-1" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn-square btn btn-primary rounded-circle mx-1" href=""><i class="fab fa-instagram"></i></a>
                            <a class="btn-square btn btn-primary rounded-circle mx-1" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <h4 class="mb-4 text-white">Company</h4>
                        <a href="@Url.Action("About", "Home", new { area = "EndUser"})"><i class="fas fa-angle-right me-2"></i> About</a>
                        <a href="@Url.Action("Packages", "Home", new { area = "EndUser"})"><i class="fas fa-angle-right me-2"></i> Packages</a>
                        <a href="@Url.Action("Rewards", "Rewards", new { area = "EndUser"})"><i class="fas fa-angle-right me-2"></i> Rewards</a>
                        <a href="@Url.Action("Contact", "Home", new { area = "EndUser"})"><i class="fas fa-angle-right me-2"></i> Contact</a>
                    </div>
                </div>
