@model List<Zoor_Lebanon.Models.Package>

@{
    ViewBag.Title = "Search Results";
}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            @ViewBag.Title</h1>
           
    </div>
</div>
<!-- Header End -->
<div class="container my-5">
    <h1 class="mb-4">Search Results</h1>

    @if (!Model.Any())
    {
        <p>No results found for your search.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var result in Model)
            {
                <a href="@Url.Action("PackageDetails", "Booking", new { area = "EndUser", packageId = result.PackageId })" class="list-group-item">
                    <h5 class="mb-1">@result.PackageName</h5>
                    <p class="mb-1">@result.Description</p>
                    <small>
                        Activities: @string.Join(", ", result.ActivitySchedules.Select(a => a.Description))
                    </small>
                </a>
            }
        </div>
    }
</div>
