@{
    Layout = null; // Use null for a clean, standalone page without default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container text-center mt-5">
        <h1>Welcome to Zoor Lebanon!</h1>
        <p>Please select your role to proceed:</p>
        <div class="d-flex justify-content-center mt-4">
            <!-- End User -->
            <button class="btn btn-primary mx-2"
                    onclick="location.href='@Url.Action("Dashboard", "Home", new { area = "EndUser" })'">
                End User
            </button>
            <!-- Admin -->
            <button class="btn btn-secondary mx-2"
                    onclick="location.href='@Url.Action("Dashboard", "Home", new { area = "Admin" })'">
                Admin
            </button>
            <!-- Tour Operator -->
            <button class="btn btn-success mx-2"
                    onclick="location.href='@Url.Action("Login", "Account", new { area = "TourOperator" })'">
                Tour Operator
            </button>
        </div>
    </div>
</body>
</html>
