@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tour Operator Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100vh;
            width: 60px;
            background-color: #343a40;
            padding-top: 20px;
            position: fixed;
            transition: width 0.3s;
        }

            .sidebar:hover {
                width: 250px;
            }

            .sidebar a {
                color: #ffffff;
                text-decoration: none;
                display: flex;
                align-items: center;
                padding: 15px;
                font-size: 1.1em;
                white-space: nowrap;
                overflow: hidden;
                transition: all 0.3s;
            }

            .sidebar i {
                margin-right: 10px;
            }

            .sidebar:hover a span {
                display: inline;
            }

            .sidebar a span {
                display: none;
            }

            .sidebar:hover a {
                padding-left: 20px;
            }

        .content {
            margin-left: 60px;
            padding: 40px;
            transition: margin-left 0.3s;
        }

        .sidebar:hover + .content {
            margin-left: 250px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

        .main-header {
            margin-bottom: 20px;
        }

        .icon-wrapper {
            font-size: 2em;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="@Url.Action("Dashboard", "TourOperator")" class="d-block text-center mb-3">
            <i class="fas fa-tachometer-alt"></i>
            <span>Tour Operator Dashboard</span>
        </a>
        <a href="@Url.Action("ManagePackages", "TourOperator")"><i class="fas fa-box"></i><span> Manage Packages</span></a>
        <a href="@Url.Action("CreatePackage", "TourOperator")"><i class="fas fa-plus-circle"></i><span> Create New Package</span></a>
        <a href="@Url.Action("UpcomingBookings", "TourOperator")"><i class="fas fa-calendar-alt"></i><span> Upcoming Bookings</span></a>
        <a href="@Url.Action("ManagePayouts", "TourOperator")"><i class="fas fa-dollar-sign"></i><span> Manage Payouts</span></a>
        <a href="@Url.Action("Notifications", "TourOperator")"><i class="fas fa-bell"></i><span> Notifications</span></a>
        <a href="@Url.Action("Settings", "TourOperator")"><i class="fas fa-cogs"></i><span> Settings</span></a>
        <a href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i><span> Logout</span></a>
    </div>

    <div class="content">
        <h2 class="main-header">Welcome, Tour Operator!</h2>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card p-4 text-center">
                    <i class="fas fa-box icon-wrapper"></i>
                    <h5 class="mt-3">Manage Packages</h5>
                    <button class="btn btn-primary mt-2" onclick="location.href='@Url.Action("ManagePackages", "TourOperator")'">Manage</button>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-4 text-center">
                    <i class="fas fa-calendar-alt icon-wrapper"></i>
                    <h5 class="mt-3">Upcoming Bookings</h5>
                    <button class="btn btn-info mt-2" onclick="location.href='@Url.Action("UpcomingBookings", "TourOperator")'">View</button>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-4 text-center">
                    <i class="fas fa-dollar-sign icon-wrapper"></i>
                    <h5 class="mt-3">Manage Payouts</h5>
                    <button class="btn btn-warning mt-2" onclick="location.href='@Url.Action("ManagePayouts", "TourOperator")'">Payouts</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card p-4 text-center">
                    <i class="fas fa-plus-circle icon-wrapper"></i>
                    <h5 class="mt-3">Create New Package</h5>
                    <button class="btn btn-success mt-2" onclick="location.href='@Url.Action("CreatePackage", "TourOperator")'">Create</button>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-4 text-center">
                    <i class="fas fa-bell icon-wrapper"></i>
                    <h5 class="mt-3">Notifications</h5>
                    <button class="btn btn-secondary mt-2" onclick="location.href='@Url.Action("Notifications", "TourOperator")'">View</button>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-4 text-center">
                    <i class="fas fa-cogs icon-wrapper"></i>
                    <h5 class="mt-3">Settings</h5>
                    <button class="btn btn-dark mt-2" onclick="location.href='@Url.Action("Settings", "TourOperator")'">Settings</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
