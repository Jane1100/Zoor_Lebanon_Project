<script>
    // Define the data for the Booking and Packages Chart
    var ctx1 = document.getElementById('booking-packages-chart').getContext('2d');
    var bookingPackagesChart = new Chart(ctx1, {
        type: 'bar', // Choose the chart type, e.g., 'bar' or 'line'
        data: {
            labels: @Html.Raw(Json.Serialize(Model.BookingPackageData.Select(x => x.Label))),
            datasets: [{
                label: 'Booking',
                data: @Html.Raw(Json.Serialize(Model.BookingPackageData.Select(x => x.Value))),
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

      


    


    // Define the data for the Top Packages Chart
    var ctx2 = document.getElementById('top-packages-chart').getContext('2d');
    var topPackagesChart = new Chart(ctx2, {
        type: 'line', // Choose the chart type, e.g., 'bar' or 'line'
        data: {
            labels: @Html.Raw(Json.Serialize(Model.TopPackages.Select(x => x.Label))),
            datasets: [{
                label: 'Popularity',
                data: @Html.Raw(Json.Serialize(Model.TopPackages.Select(x => x.Value))),
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            }]
        }
    });

    // Define the data for the Most Active Locations Chart
    var ctx3 = document.getElementById('active-locations-chart').getContext('2d');
    var activeLocationsChart = new Chart(ctx3, {
        type: 'pie', // Choose the chart type, e.g., 'pie' or 'doughnut'
        data: {
            labels: @Html.Raw(Json.Serialize(Model.ActiveLocations.Select(x => x.Label))),
            datasets: [{
                label: 'Activity',
                data: @Html.Raw(Json.Serialize(Model.ActiveLocations.Select(x => x.Value))),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        }
    });
</script>
