                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Add New Package</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="~/admin/package/widgets">Home</a></li>
                                    <li class="breadcrumb-item active">Add Package</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Main content -->
                <section class="content">
                    <form asp-action="addpackage" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">General Information</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label asp-for="PackageName">Package Name</label>
                                            <input asp-for="PackageName" class="form-control" />
                                            <span asp-validation-for="PackageName" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Description">Description</label>
                                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                       </div>
                                        <div class="form-group">
                                            <label asp-for="PackageTypeId">Package Type</label>
                                            <select asp-for="PackageTypeId" class="form-control" asp-items="ViewBag.PackageTypes">
                                                <option value="">Select a Package Type</option>
                                            </select>

                                            <span asp-validation-for="PackageTypeId" class="text-danger"></span>
                                            

                                        </div>


                                        <div class="form-group">
                                            <label asp-for="StartDate">Start Date</label>
                                            <input asp-for="StartDate" class="form-control" type="date" />
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="EndDate">End Date</label>
                                            <input asp-for="EndDate" class="form-control" type="date" />
                                            <span asp-validation-for="EndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <div class="card card-secondary">
                                    <div class="card-header">
                                        <h3 class="card-title">Pricing and Availability</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label asp-for="UnitPrice">Unit Price</label>
                                            <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="AvailableSpots">Available Spots</label>
                                            <input asp-for="AvailableSpots" class="form-control" type="number" />
                                            <span asp-validation-for="AvailableSpots" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="TotalSpots">Total Spots</label>
                                            <input asp-for="TotalSpots" class="form-control" type="number" />
                                            <span asp-validation-for="TotalSpots" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="AverageDuration">Average Duration (hours)</label>
                                            <input asp-for="AverageDuration" class="form-control" type="number" step="0.1" />
                                            <span asp-validation-for="AverageDuration" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <a href="~/admin/package/widgets" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary float-right">Create Package</button>
                            </div>
                        </div>
                    </form>
