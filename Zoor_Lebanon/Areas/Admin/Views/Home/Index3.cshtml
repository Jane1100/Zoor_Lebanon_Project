            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.VisitorChartData.Dates)),
                datasets: [{
                    label: "This Week",
                    data: @Html.Raw(Json.Serialize(Model.VisitorChartData.Values)),
                    borderColor: "#007bff",
                    fill: false
                }]
            }
        });

        new Chart(salesChart, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.SalesChartData.Dates)),
                datasets: [{
                    label: "Sales",
                    data: @Html.Raw(Json.Serialize(Model.SalesChartData.Values)),
                    backgroundColor: "#007bff"
                }]
            }
        });
    </script>

        
         


