@model Zoor_Lebanon.Models.TourOperator

@{
    ViewData["Title"] = "Add Tour Operator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Tour Operator</title>
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6"><h1>@ViewData["Title"]</h1></div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Tour Operator Details</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="@Url.Action("Addtr", "Operator", new { area = "Admin" })">
                                <div class="form-group">
                                    <label for="User_Firstname">First Name</label>
                                    <input type="text" name="User.Firstname" class="form-control" placeholder="Enter first name" />
                                </div>
                                <div class="form-group">
                                    <label for="User_Lastname">Last Name</label>
                                    <input type="text" name="User.Lastname" class="form-control" placeholder="Enter last name" />
                                </div>
                                <div class="form-group">
                                    <label for="CompanyName">Company Name</label>
                                    <input type="text" name="CompanyName" class="form-control" placeholder="Enter company name" />
                                </div>
                                <div class="form-group">
                                    <label for="BusinessPhone">Business Phone</label>
                                    <input type="text" name="BusinessPhone" class="form-control" placeholder="Enter business phone" />
                                </div>
                                <div class="d-flex justify-content-between mt-3">
                                    <button type="submit" class="btn btn-primary">Add Operator</button>
                                    <a href="@Url.Action("Operators", "Operator", new { area = "Admin" })" class="btn btn-secondary">
                                        Back to List
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/dist/js/adminlte.min.js"></script>
</body>
</html>
