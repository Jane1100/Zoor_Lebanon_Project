@model Zoor_Lebanon.Models.TourOperator

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Tour Operator Profile</title>
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6"><h1>Edit Tour Operator Profile</h1></div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container">
                    <!-- Display TempData messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
                    }

                    <!-- Profile Form -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Tour Operator Details</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="ProfileU" asp-controller="User" asp-area="Admin">
                                <input type="hidden" name="OperatorId" value="@Model.OperatorId" />

                                <!-- Company Name -->
                                <div class="form-group">
                                    <label for="CompanyName">Company Name</label>
                                    <input type="text" name="CompanyName" class="form-control" value="@Model.CompanyName" required />
                                </div>

                                <!-- Business Phone -->
                                <div class="form-group">
                                    <label for="BusinessPhone">Business Phone</label>
                                    <input type="text" name="BusinessPhone" class="form-control" value="@Model.BusinessPhone" required />
                                </div>

                                <!-- Linking User details if present -->
                             

                                <!-- Save Changes Button -->
                                <div class="d-flex justify-content-between mt-3">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                    <a href="@Url.Action("Operators", "Operator", new { area = "Admin" })" class="btn btn-secondary">
                                        Back to Profiles
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/dist/js/adminlte.min.js"></script>
</body>
</html>
